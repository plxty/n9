+if [ os.name ] = NT
+{
+    local rule call-batch-script ( command )
+    {
+        return "call $(command) >nul$(.nl)" ;
+    }
+}
+else
+{
+    # On cygwin, we need to run both the batch script
+    # and the following command in the same instance
+    # of cmd.exe.
+    local rule call-batch-script ( command )
+    {
+        return "cmd.exe /S /C call $(command) \">nul\" \"&&\" " ;
